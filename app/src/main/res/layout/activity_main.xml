<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/center"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="56dp"
        android:layout_height="56dp" />
    <ImageView
        android:id="@+id/centerEnd"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/center"
        android:layout_marginStart="30dp" />
    <ImageView
        android:id="@+id/centerStart"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/center"
        android:layout_marginEnd="30dp" />
    <ImageView
        android:id="@+id/centerTop"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/center"
        android:layout_marginBottom="30dp" />
    <ImageView
        android:id="@+id/centerBotton"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/topStart"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toTopOf="@id/center"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toStartOf="@id/centerTop"
        android:layout_marginEnd="30dp"/>
    <ImageView
        android:id="@+id/topEnd"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toTopOf="@id/center"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toEndOf="@id/centerTop"
        android:layout_marginStart="30dp"/>
    <ImageView
        android:id="@+id/bottonStart"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/center"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/centerTop"
        android:layout_marginEnd="30dp"/>
    <ImageView
        android:id="@+id/bottonEnd"
        android:background="#333333"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/center"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/centerTop"
        android:layout_marginStart="30dp"/>
    <Button
        android:id="@+id/buttonReset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset" />

</androidx.constraintlayout.widget.ConstraintLayout>
